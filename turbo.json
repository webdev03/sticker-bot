{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "format": {
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".vercel/output/**", ".svelte-kit/output/**"],
      "env": [
        "SLACK_TEAM",
        "SLACK_SIGNING_SECRET",
        "SLACK_BOT_TOKEN",
        "SLACK_APP_TOKEN",
        "SLACK_CLIENT_ID",
        "SLACK_CLIENT_SECRET",
        "SLACK_USER_XOXC",
        "SLACK_COOKIE",
        "SLACK_CHANNELS",
        "DATABASE_URL",
        "JWT_SIGNING_SECRET",
        "BASE_URL",
        "EMOJI_CACHE_UPDATE_TOKEN"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "start": {
      "persistent": true,
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [".cache/tsbuildinfo.json"]
    }
  }
}

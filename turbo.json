{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "format": {
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"],
      "env": ["DATABASE_URL", "BETTER_AUTH_SECRET", "BASE_URL"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [".cache/tsbuildinfo.json"]
    }
  }
}
